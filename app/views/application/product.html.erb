<div class="body-content outer-top-xs">
	<div class='container'>
		<div class='row single-product'>
			<div class='col-md-9'>
            <div class="detail-block">
              <div class="row  wow fadeInUp">

                <div class="col-xs-12 col-sm-6 col-md-5 gallery-holder">
                  <div class="product-item-holder size-big single-product-gallery small-gallery">

                      <div id="owl-single-product">
                          <div class="single-product-gallery-item" id="slide1">
                            <%= image_tag @product.product_image.url(:thumb), alt: @product.product_name, class: 'img-responsive' %>
                          </div><!-- /.single-product-gallery-item -->
                      </div><!-- /.single-product-slider -->
                  </div><!-- /.single-product-gallery -->
                </div><!-- /.gallery-holder -->
                <div class='col-sm-6 col-md-7 product-info-block'>
                  <div class="product-info">
                    <h1 class="name"><%= @product.product_name %></h1>

                    <div class="stock-container info-container m-t-10">
                      <div class="row">
                        <div class="col-sm-2">
                          <div class="stock-box">
                            <span class="label">Availability :</span>
                          </div>
                        </div>
                        <div class="col-sm-9">
                          <div class="stock-box">
                            <span class="value">In Stock</span>
                          </div>
                        </div>
                      </div><!-- /.row -->
                    </div><!-- /.stock-container -->


                    <div class="price-container info-container m-t-20">
                      <div class="row">


                        <div class="col-sm-6">
                          <% if @product.sale_price %>
                            <div class="price-box">
                              <span class="price">$<%= @product.sale_price%></span>
                              <span class="price-strike">$<%= @product.price%></span>
                            </div>
                          <%else%>
                            <div class="price-box">
                              <span class="price">$<%= @product.price %></span>
                            </div>
                          <%end%>
                        </div>

                      </div><!-- /.row -->
                    </div><!-- /.price-container -->

                    <div class="quantity-container info-container">
                      <div class="row">

                        <div class="col-sm-2">
                          <span class="label">Qty :</span>
                        </div>

                        <div class="col-sm-2">
                          <div class="cart-quantity">
                            <div class="quant-input">
                                      <div class="arrows">
                                        <div class="arrow plus gradient"><span class="ir"><i class="icon fa fa-sort-asc"></i></span></div>
                                        <div class="arrow minus gradient"><span class="ir"><i class="icon fa fa-sort-desc"></i></span></div>
                                      </div>
                                      <input type="text" value="1">
                                  </div>
                                </div>
                        </div>

                        <div class="col-sm-7">
                          <a href="#" class="btn btn-primary"><i class="fa fa-shopping-cart inner-right-vs"></i> ADD TO CART</a>
                          <%= link_to add_to%>
                        </div>


                      </div><!-- /.row -->
                    </div><!-- /.quantity-container -->






                  </div><!-- /.product-info -->
                </div><!-- /.col-sm-7 -->
              </div><!-- /.row -->
            </div>
              <!-- ============================================== UPSELL PRODUCTS ============================================== -->
            <section class="section featured-product wow fadeInUp">
              <h3 class="section-title">Other things you may like</h3>
              <div class="owl-carousel home-owl-carousel upsell-product custom-carousel owl-theme outer-top-xs">
                <% @upsellProducts.each do |upsellProduct|%>
                <div class="item item-carousel">
                  <div class="products">
                      <div class="product">
                        <div class="product-image">
                          <div class="image">
                            <%= link_to upsellProduct.product_name do %>
                              <%=image_tag upsellProduct.product_image.url(:thumb), alt: upsellProduct.product_name%>
                            <%end%>
                          </div><!-- /.image -->

                                      <div class="tag sale"><span>sale</span></div>
                        </div><!-- /.product-image -->

                        <div class="product-info text-left">
                          <h3 class="name">
                            <%= link_to upsellProduct.product_name, product_path(product: upsellProduct.id) %></h3>
                          <div class="product-price">
                            <span class="price">
                              $650.99				</span>
                                             <span class="price-before-discount">$ 800</span>

                          </div><!-- /.product-price -->

                        </div><!-- /.product-info -->
                              <div class="cart clearfix animate-effect">
                            <div class="action">
                              <ul class="list-unstyled">
                                <li class="add-cart-button btn-group">
                                  <button class="btn btn-primary icon" data-toggle="dropdown" type="button">
                                    <i class="fa fa-shopping-cart"></i>
                                  </button>
                                  <button class="btn btn-primary cart-btn" type="button">Add to cart</button>

                                </li>

                                        <li class="lnk wishlist">
                                  <a class="add-to-cart" href="detail.html" title="Wishlist">
                                     <i class="icon fa fa-heart"></i>
                                  </a>
                                </li>

                                <li class="lnk">
                                  <a class="add-to-cart" href="detail.html" title="Compare">
                                      <i class="fa fa-signal"></i>
                                  </a>
                                </li>
                              </ul>
                            </div><!-- /.action -->
                          </div><!-- /.cart -->
                          </div><!-- /.product -->
                  </div><!-- /.products -->
                </div><!-- /.item -->
                    <%end%>
              </div><!-- /.home-owl-carousel -->
            </section><!-- /.section -->
            <!-- ============================================== UPSELL PRODUCTS : END ============================================== -->
			  </div><!-- /.col -->
			<div class="clearfix"></div>
		</div><!-- /.row -->
</div><!-- /.body-content -->
</div>